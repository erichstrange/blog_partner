---
import Layout from './Layout.astro';

interface Props {
  title: string;
  date: string;
  author?: string;
}

const { title, date, author = "Erich Adventure" } = Astro.props;
---

<Layout title={title}>
  <header class="bg-gradient-to-r from-purple-800 to-indigo-900 py-16">
    <div class="max-w-4xl mx-auto px-4">
      <a 
        href={import.meta.env.BASE_URL} 
        class="text-white mb-8 inline-block hover:text-indigo-200 transition-colors"
      >
        ← Back to Blog
      </a>
      <h1 class="text-4xl font-bold text-white mb-4">{title}</h1>
      <div class="text-indigo-200">
        <span>{date}</span> • <span>{author}</span>
      </div>
    </div>
  </header>

  <main class="max-w-4xl mx-auto px-4 py-12">
    <article class="prose prose-lg prose-indigo mx-auto bg-white p-8 rounded-lg shadow-lg">
      <slot />
    </article>
  </main>
</Layout>

<style is:global>
  .prose {
    max-width: 100%;
  }
  .prose a {
    color: #4f46e5;
    text-decoration: none;
    border-bottom: 2px solid #818cf8;
  }
  .prose a:hover {
    color: #4338ca;
    border-bottom-color: #4338ca;
  }
  .prose h2 {
    color: #1f2937;
    margin-top: 2em;
  }
  .prose p {
    color: #374151;
  }
  .prose ul {
    color: #374151;
  }
</style>